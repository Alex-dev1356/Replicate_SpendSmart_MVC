@{
    ViewData["Title"] = "Expenses";
}

@* Importing the List oftype ExpensesModel *@
@model List<ExpensesModel>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @* Rendering all the data here using blazer code and using foreach loop *@
            @{
                foreach (var expenses in Model)
                {
                    <tr>
                        <td>@expenses.Id</td>
                        <td>@expenses.Value</td>
                        <td>@expenses.Desription</td>
                        <td>
                            <a asp-controller="Home" asp-action="CreateEditExpenses" asp-route-id="@expenses.Id">Edit</a>
                            <a asp-controller="Home" asp-action="DeleteExpenses" asp-route-id="@expenses.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
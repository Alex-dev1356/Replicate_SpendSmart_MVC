@{
    ViewData["Title"] = "Create / Edit";
}

<div class="text-center">
    <h1 class="display-4">Create or Edit an Expense</h1>
    <br />
</div>

<form>
    <label>Id</label>
    <input class="form-control" placeholder="0" type="number" />

    <label class="mt-4">Value (PHP)</label>
    <input class="form-control" placeholder="0" type="number" step="0.01" />

    <label class ="mt-4">Description</label>
    <input class="form-control" placeholder="Add description" type="text" />

    <button type="submit" class="btn btn-primary mt-4">Log</button>
</form>


@{
    ViewData["Title"] = "Create / Edit";
}

@* Adding the ExpensesModel to store data from the form *@
@model Replacate_SpendSmart_MVC.Models.ExpensesModel

<div class="text-center">
    <h1 class="display-4">Create or Edit an Expense</h1>
    <br />
</div>

<form asp-controller="Home" asp-action="CreateEditExpensesForm">
    <input hidden class="form-control" placeholder="0" type="number" asp-for="Id"/>

    <label class="mt-4">Value (PHP)</label>
    <input class="form-control" placeholder="0" type="number" step="0.01" asp-for="Value"/>

    <label class ="mt-4">Description</label>
    <input class="form-control" placeholder="Add description" type="text" asp-for="Desription"/>

    <button type="submit" class="btn btn-primary mt-4">Log</button>
</form>

